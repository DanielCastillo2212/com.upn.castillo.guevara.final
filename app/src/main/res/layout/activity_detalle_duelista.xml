<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".DetalleDuelistaActivity">

        <TextView
            android:id="@+id/tv_nombre_duelista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_registrar_carta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Carta" />

        <Button
            android:id="@+id/btn_ver_cartas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Cartas" />

        <Button
            android:id="@+id/btn_ver_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Mapa" />

    </LinearLayout>
</RelativeLayout>